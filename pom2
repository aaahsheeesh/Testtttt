                <configuration>
                    <cloudHub2Deployment>
                        <uri>https://anypoint.mulesoft.com</uri>
                        <username>${anypoint.username}</username>
                        <password>${anypoint.password}</password>
                        <applicationName>${project.artifactId}</applicationName>
                        <environment>${anypoint.envId}</environment>
                        <region>us-east-1</region>
                        <artifact>
                            <file>target/your-application.jar</file>
                        </artifact>
                        <workers>
                            <type>Micro</type>
                            <amount>1</amount>
                        </workers>
                        <muleVersion>
                            <version>${app.runtime}</version>
                        </muleVersion>
                        <properties>
                            <!-- Add any additional properties or environment variables here -->
                        </properties>
                    </cloudHub2Deployment>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
